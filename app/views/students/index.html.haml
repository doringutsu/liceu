.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 Elevi
    =link_to new_student_path do
      %button.btn.btn-primary Adăugare elev

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-content
          %table.table.table-striped
            %thead
              %tr
                %th Nume, Prenume
                %th Clasa
                %th Data nașterii
                %th Telefon
                %th Email
            %tbody
              -@students.each do |student|
                %tr
                  %td
                    =link_to student.full_name, student_path(student)
                  %td
                    =link_to student.group.display, student.group
                  %td= student.birthday
                  %td= student.phone
                  %td= student.email
                  %td
                    =link_to edit_student_path(student) do
                      %button.btn.btn-outline.btn-warning Actualizare date
                    =link_to student_grades_path(student) do
                      %button.btn.btn-outline.btn-warning Actualizare note
