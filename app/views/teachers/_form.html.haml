.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-8
      .ibox.float-e-margins
        .ibox-content
          = simple_form_for @teacher,
              wrapper: :horizontal_form,
              html: {class: 'form-horizontal', id: 'form'} do |f|

            = f.input :last_name, label: 'Nume'
            = f.input :first_name, label: 'Prenume'
            = f.input :phone, label: 'Telefon', input_html: { 'data-mask': '(099)-999-999'}
            = f.input :subjects, label: 'Materii', collection: Subject.all, input_html: { multiple: true}, :selected => @teacher.subjects.map {|t| t.id}, :include_blank => false
            //= f.input :birthday, as: :datepicker, required: true, label: 'Data nașterii'
            .form-group#data_1
              = f.label :birthday, 'Data nașterii', :class => 'col-sm-3 control-label'
              .col-sm-9
                .input-group.date
                  %span.input-group-addon
                    %i.fa.fa-calendar
                  = f.text_field :birthday, :class => 'form-control'

            .text-center
              = f.submit :class => 'btn btn-sm btn-primary', :value => 'Salvare'

:javascript
  $('#data_1 .input-group.date').datepicker({
    todayBtn: "linked",
    keyboardNavigation: false,
    forceParse: false,
    calendarWeeks: true,
    autoclose: true
  });
